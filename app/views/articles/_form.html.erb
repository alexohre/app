    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Article.statuses.keys.to_a %>
  </div>

  <div>
    <%= form.label :featured, style: "display: block" %>
