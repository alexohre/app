<div class="container mt-5">
  <div class="row">
    <div class="col-lg-8">
      <!-- Post content-->
      <article>
        <!-- Post header-->
        <header class="mb-4">
          <!-- Post title-->
          <h1 class="fw-bolder mb-1"><%= @article.title %></h1>
          <!-- Post meta content-->
          <div class="text-muted fst-italic mb-2">Posted on  <i class="bi bi-watch me-1"></i> <%= @article.created_at.strftime("%B %d, %Y %H:%M") %> <i class="bi bi-person-fill ms-2"></i> <b><%= @article.user.email %></b></div>
          <!-- Post categories-->
          <a class="badge bg-secondary text-decoration-none link-light" href="#!">Freebies</a>
        </header>
        <!-- Preview image figure-->
        <figure class="mb-4"><%= image_tag(@article.image, class: "img-fluid rounded", width: "100%") if @article.image.attached? %></figure>
        <!-- Post content-->
        <section class="mb-5">
          <p class="fs-6 mb-4"><%= @article.content %></p>
        </section>
      </article>
      <!-- Comments section-->
      <section class="mb-5">
        <div class="card bg-light">
          <div class="card-body">
            <%#= render 'comments/comment', collection: @article.comments  %>
            <% if current_user %>
              <%= render 'comments/new' %>
            <% else %>
              <div class="bg-light text-center">
                <div class=" mx-auto">
                  <p class="fs-5">Please Sign in or create account to join the discussion!</p>
                  <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a href="/login" class="btn btn-outline-primary px-4 me-sm-2 ">Sign In</a>
                    <a  href="/sign_up" class="btn btn-primary px-4">Sign Up</a>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <% if !@article.comments.empty? %>
          <div class="card ps-3 pt-3 pe-3 mt-4 bg-light">
            <%= render @article.comments.order(id: :desc) %>
          </div>
        <% end %>
      </section>
    </div>
    <!-- Side widgets-->
    <div class="col-lg-4">
      <!-- Search widget-->
            <%= render 'shared/sidebar' %>
    </div>
  </div>
</div>
<%#= render @article %>
<div>
  <%= link_to "Edit this article", edit_article_path(@article) %> |
  <%= link_to "Back to articles", articles_path %>
  <%= button_to "Destroy this article", @article, method: :delete %>
</div>
