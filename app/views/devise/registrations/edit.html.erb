<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container">
    <h2>Account Settings</h2>
    <div class="row">
      <div class="col-lg-4 col-md-4 col-sm-12">
        <div class="card shadow p-3 mb-5 bg-body rounded">
          <div class="d-flex justify-content-center mb-3">
            <%= image_tag(resource.avatar_thumbnail, class: "rounded-circle") if resource.avatar.attached? %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :avatar, "Profile image" %><br />
            <%= f.file_field :avatar, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="col-lg-8 col-md-8 col-sm-12">
        <div class="card shadow p-3 mb-5 bg-body rounded">
          <div class="form-group mb-3">
            <%= f.label :first_name %><br />
            <%= f.text_field :first_name, autofocus: true, autocomplete: "First Name", class: "form-control", placeholder: "Ex: John" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :last_name %><br />
            <%= f.text_field :last_name, autocomplete: "Last Name", class: "form-control", placeholder: "Ex: Doe" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :email %><br />
            <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :Username %><br />
            <%= f.text_field :username,  autocomplete: "username", class: "form-control", placeholder: "Ex: Andy" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :bio %><br />
            <%= f.text_area :bio, autocomplete: "Bio", class: "form-control", placeholder: " Ex: Hello, Iâ€™m a content writer who is fascinated by content fashion, celebrity and lifestyle.", rows: 4 %>
          </div>
        </div>
        <div class="card shadow p-3 mb-5 bg-body rounded">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>
          <div class="form-group mb-3">
            <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>
          <div class="form-group mb-3">
            <%= f.label :current_password %> <i class="text-success fw-bold">(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
          </div>
        </div>
        <div class="actions ">
          <%= f.submit "Update Profile", class: "mb-3 btn btn-primary shadow" %>
        </div>
      <% end %>
      <div class="card shadow p-3 mb-5 bg-body rounded mt-3">
        <h3 class="text-danger">Cancel my account</h3>
        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), form: { data: { turbo_confirm: "#{@user.email}, are you sure to permanently delete your account?" }}, turbo_method: :delete, class: "btn btn-danger" %></p>
      </div>
    </div>
  </div>
</div>
