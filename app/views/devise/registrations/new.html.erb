<style>
.form-signup {
    width: 100%;
    max-width: 330px;
    padding: 15px;
    margin: auto;
}
</style>

<main class="form-signup text-center">
    <i class="mb-4 bi bi-boxes fs-1"></i>
    <h1 class="h3 mb-3 fw-normal">Please Sign up</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating mb-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "floatingInput", placeholder: "name@example.com", class: "form-control" %>
    <%= f.label :email, for: "floatingInput" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", id: "floatingPassword", placeholder: "Password" %>
    <p>6 character minimum</p>
    <%= f.label :password, for: "floatingPassword" %>
  </div>

  <div class="form-floating mb-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", id: "floatingPassword", placeholder: "Password_confirmation" %>
    <%= f.label :password_confirmation, for: "floatingPassword" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "w-100 btn btn-lg btn-primary", data: {turbo: false} %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</main>